{
  "name": "go-vue-starter",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:snapiz/go-vue-starter.git",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve:api & npm run serve",
    "serve": "cd web && npm run serve",
    "serve:api": "go run server.go",
    "build": "cd web && npm run build",
    "lint": "cd web && npm run lint",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit",
    "test:api": "APP_ENV=test go test github.com/snapiz/go-vue-starter/api",
    "db:up": "goose up",
    "db:down": "goose down",
    "db:models": "sqlboiler psql",
    "db:migration": "goose create",
    "heroku:db:up": "heroku run goose -- -env=production up",
    "deploy": "git push heroku master"
  }
}
